<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@color/gray3</item>
        <item name="colorControlActivated">@color/blue_primary</item>
        <item name="colorControlHighlight">@color/blue_primary</item>
        <item name="colorPrimary">@color/blue_primary</item>
        <item name="colorPrimaryDark">@color/blue_primary</item>
        <item name="colorAccent">@color/blue_primary</item>
    </style>

    <style name="AppTheme_Register" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@color/gray3</item>
        <item name="colorControlActivated">@color/gray2</item>
        <item name="colorControlHighlight">@color/gray2</item>
        <item name="colorPrimary">@color/blue_primary</item>
        <item name="colorPrimaryDark">@color/blue_primary</item>
        <item name="colorAccent">@color/blue_primary</item>
    </style>

    <style name="AppTheme_Payment" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@color/gray3</item>
        <item name="colorControlActivated">@color/gray2</item>
        <item name="colorControlHighlight">@color/gray2</item>
        <item name="colorPrimary">@color/blue_primary</item>
        <item name="colorPrimaryDark">@color/blue_primary</item>
        <item name="colorAccent">@color/blue_primary</item>
    </style>

    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlNormal">@color/gray3</item>
        <item name="colorControlActivated">@color/gray2</item>
        <item name="colorControlHighlight">@color/gray2</item>

        <item name="colorPrimary">@color/white_primary</item>

        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/blue_primary</item>

        <!--   theme UI controls like checkboxes and text fields e.g. FloatActionButton -->
        <item name="colorAccent">@color/white_primary</item>

        <!-- Title Text Color -->
        <item name="android:textColorPrimary">@color/white_primary</item>

        <!-- color of the menu overflow icon (three vertical dots) -->
        <item name="android:textColorSecondary">@color/red_primary</item>


        <item name="android:windowBackground">@color/white_primary</item>

        <item name="android:actionBarStyle">@style/MyActionBar</item>


    </style>


    <style name="AppTheme.Overflow">
        <item name="android:src">@null</item>
    </style>


    <style name="AppThemeNoActionBar1" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlNormal">@color/gray3</item>
        <item name="colorControlActivated">@color/gray2</item>
        <item name="colorControlHighlight">@color/gray2</item>

        <item name="colorPrimary">@color/brown_trans</item>

        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/brown_trans</item>

        <!--   theme UI controls like checkboxes and text fields e.g. FloatActionButton -->
        <item name="colorAccent">@color/white_primary</item>

        <!-- Title Text Color -->
        <item name="android:textColorPrimary">@color/white_primary</item>

        <!-- color of the menu overflow icon (three vertical dots) -->
        <item name="android:textColorSecondary">@color/red_primary</item>


        <item name="android:actionOverflowButtonStyle">@style/AppTheme.Overflow</item>
        <!-- If you're using AppCompat, instead use -->
        <item name="actionOverflowButtonStyle">@style/AppTheme.Overflow</item>
        <item name="android:windowBackground">@color/white_primary</item>

        <item name="android:actionBarStyle">@style/MyActionBar1</item>


    </style>

    <style name="MyActionBar1" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/brown_trans</item>
    </style>


    <style name="AppThemeNoActionBarForTransaction" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlNormal">@color/gray3</item>
        <item name="colorControlActivated">@color/gray2</item>
        <item name="colorControlHighlight">@color/gray2</item>

        <item name="colorPrimary">@color/white_primary</item>

        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/white_primary</item>

        <!--   theme UI controls like checkboxes and text fields e.g. FloatActionButton -->
        <item name="colorAccent">@color/red_primary</item>

        <!-- Title Text Color -->
        <item name="android:textColorPrimary">@color/white_primary</item>

        <!-- color of the menu overflow icon (three vertical dots) -->
        <item name="android:textColorSecondary">@color/white_primary</item>


        <item name="android:windowBackground">@color/white_primary</item>

        <item name="android:actionBarStyle">@style/MyActionBar</item>



    </style>

    <!--<style name="MyMenuItem" parent="android:Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@drawable/btn_green</item>
    </style>-->

    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/blue_primary</item>
    </style>

    <!-- Base application theme. -->
    <style name="checkBoxTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@color/gray3</item>
        <item name="colorControlActivated">@color/red_primary</item>
        <item name="colorControlHighlight">@color/red_primary</item>
        <item name="colorPrimary">@color/blue_primary</item>
        <item name="colorPrimaryDark">@color/blue_primary</item>
        <item name="colorAccent">@color/blue_primary</item>
    </style>

