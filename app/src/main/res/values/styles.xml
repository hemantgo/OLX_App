        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/btn_oval_gray</item>
    </style>

    <style name="drawable_circle_red">
        <item name="android:textColor">#FFFFFF</item>
