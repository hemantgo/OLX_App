    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabMaxWidth">@dimen/tab_max_width</item>
        <item name="tabIndicatorColor">@color/white_primary</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabBackground">@android:color/transparent</item>
        <item name="tabTextAppearance">@style/MyCustomTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/white_primary</item>
    </style>

    <style name="MyCustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray4</item>
        <item name="android:tabStripEnabled">true</item>
        <item name="textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="MyCustomTabLayoutWhite" parent="Widget.Design.TabLayout">
        <item name="tabMaxWidth">@dimen/tab_max_width</item>
        <item name="tabIndicatorColor">@color/red_primary</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabBackground">@android:color/transparent</item>
        <item name="tabTextAppearance">@style/MyCustomTabTextAppearanceWhite</item>
        <item name="tabSelectedTextColor">@color/red_primary</item>
    </style>

    <style name="MyCustomTabTextAppearanceWhite" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray2</item>
        <item name="android:tabStripEnabled">true</item>
        <item name="textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="Base.Theme.HMKCodeApp" parent="Theme.AppCompat.NoActionBar">

        <item name="colorPrimary">@color/my_primary</item>

        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/my_primary_dark</item>

        <!--   theme UI controls like checkboxes and text fields e.g. FloatActionButton -->
        <item name="colorAccent">@color/my_accent</item>

        <!-- Title Text Color -->
        <item name="android:textColorPrimary">@color/my_primary_text</item>

        <!-- color of the menu overflow icon (three vertical dots) -->
        <item name="android:textColorSecondary">@color/my_secondary_text</item>


        <item name="android:windowBackground">@color/window_background</item>
    </style>

    <!--
       Base application theme, dependent on API level. This theme is replaced
       by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
   -->
    <style name="AppBaseTheme" parent="Base.Theme.HMKCodeApp">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>


    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:orientation">vertical</item>
    </style>


    <style name="CollapseApp" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white_primary</item>
        <item name="android:visible">true</item>
        <item name="android:text">TRANSACTION</item>
        <item name="android:alpha">1</item>
    </style>

    <style name="ExpendAp" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white_primary</item>
        <item name="android:text">DASHBOARD</item>
        <item name="android:visible">true</item>
        <item name="android:alpha">1</item>
        <item name="android:textStyle">bold</item>

    </style>


    <style name="AppTheme_Edittext" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@color/gray3</item>
        <item name="colorControlActivated">@color/gray2</item>
        <item name="colorControlHighlight">@color/gray2</item>
        <item name="colorPrimary">@color/blue_primary</item>
        <item name="colorPrimaryDark">@color/blue_primary</item>
        <item name="colorAccent">@color/blue_primary</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/gray1</item>
        <item name="android:textColorHint">@color/gray3</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="EditText_Login">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/gray1</item>
        <item name="android:textColorHint">@color/gray3</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="EditText_CollectPayment">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/gray1</item>
        <item name="android:textColorHint">@color/gray3</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="EditText_Register" parent="Widget.Design.TextInputLayout">
        <item name="android:textSize">16dip</item>
        <item name="android:textColor">@color/gray1</item>
        <item name="android:textColorHint">@color/gray3</item>
        <item name="android:singleLine">true</item>

    </style>


    <style name="FloatingActionButton" parent="android:Widget.Material.Button">
        <item name="android:background">@drawable/fab</item>
        <item name="android:stateListAnimator">@anim/animation</item>
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
    </style>

    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/gray3</item>
    </style>


   <style name="FloatingActionButton.Mini">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="ThemeOverlay.YourApp" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:colorBackground">@color/my_primary_text</item>
        <item name="android:textColor">@color/window_background</item>
    </style>

    <style name="Theme_Dialog" parent="android:Theme.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>



    <declare-styleable name="CustomedTextView">
        <attr name="typeface" format="string" />
    </declare-styleable>


</resources>
